@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<FlickrClone.Models.Image>
@using System.Security.Claims


<h2>Images</h2>
@if (Model.Any())
{

    @foreach (var listImage in Model)
    {
        <p>@Html.DisplayFor(modelImage => listImage.Description) | @Html.ActionLink("Details", "Details", new { id = listImage.ImageId}) | @Html.ActionLink("Edit", "Edit", new { id = listImage.ImageId})  | @Html.ActionLink("Delete", "Delete", new { id = listImage.ImageId }) |</p>
        <hr />
    }
    @Html.ActionLink("Create New Image", "Create")
}
else
{
    <p>No images have been added yet!</p>
    @Html.ActionLink("Create New Image", "Create")
}